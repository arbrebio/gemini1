---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout title="Inventory Management">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Inventory</h1>
            <p class="text-gray-600">
                Manage products, stock levels, and categories
            </p>
        </div>
        <button
            id="add-product-btn"
            class="bg-primary hover:bg-primary-600 text-white px-4 py-2 rounded-lg flex items-center gap-2 transition-colors"
        >
            <i class="fas fa-plus"></i>
            Add Product
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Products</p>
                    <p
                        class="text-2xl font-bold text-gray-900"
                        id="total-products"
                    >
                        0
                    </p>
                </div>
                <div class="bg-blue-100 text-blue-600 p-3 rounded-lg">
                    <i class="fas fa-box"></i>
                </div>
            </div>
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Low Stock Items</p>
                    <p
                        class="text-2xl font-bold text-red-600"
                        id="low-stock-count"
                    >
                        0
                    </p>
                </div>
                <div class="bg-red-100 text-red-600 p-3 rounded-lg">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
            </div>
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Total Value</p>
                    <p
                        class="text-2xl font-bold text-green-600"
                        id="total-value"
                    >
                        0 XOF
                    </p>
                </div>
                <div class="bg-green-100 text-green-600 p-3 rounded-lg">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>

        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Categories</p>
                    <p
                        class="text-2xl font-bold text-purple-600"
                        id="total-categories"
                    >
                        0
                    </p>
                </div>
                <div class="bg-purple-100 text-purple-600 p-3 rounded-lg">
                    <i class="fas fa-tags"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div
        class="bg-white p-4 rounded-lg shadow-sm border border-gray-100 mb-6 flex flex-col md:flex-row gap-4"
    >
        <div class="flex-1 relative">
            <i
                class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"
            ></i>
            <input
                type="text"
                id="search-input"
                placeholder="Search products by name or SKU..."
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary"
            />
        </div>
        <select
            id="category-filter"
            class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary"
        >
            <option value="">All Categories</option>
        </select>
        <select
            id="stock-filter"
            class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary"
        >
            <option value="">All Stock Levels</option>
            <option value="low">Low Stock</option>
            <option value="out">Out of Stock</option>
            <option value="in">In Stock</option>
        </select>
    </div>

    <!-- Products Table -->
    <div
        class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
    >
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th class="px-6 py-3">Product</th>
                        <th class="px-6 py-3">SKU</th>
                        <th class="px-6 py-3">Category</th>
                        <th class="px-6 py-3">Price</th>
                        <th class="px-6 py-3">Stock</th>
                        <th class="px-6 py-3">Status</th>
                        <th class="px-6 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody id="products-table-body">
                    <tr>
                        <td colspan="7" class="px-6 py-8 text-center"
                            >Loading products...</td
                        >
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</AdminLayout>

<script>
    import { supabase } from "../../../lib/supabase";

    async function loadStats() {
        try {
            const { count: totalProducts } = await supabase
                .from("admin_products")
                .select("*", { count: "exact", head: true });

            const { count: lowStock } = await supabase
                .from("admin_products")
                .select("*", { count: "exact", head: true })
                .lt("stock_quantity", 10);

            const { count: categories } = await supabase
                .from("admin_product_categories")
                .select("*", { count: "exact", head: true });

            document.getElementById("total-products")!.textContent =
                totalProducts?.toString() || "0";
            document.getElementById("low-stock-count")!.textContent =
                lowStock?.toString() || "0";
            document.getElementById("total-categories")!.textContent =
                categories?.toString() || "0";
        } catch (error) {
            console.error("Error loading stats:", error);
        }
    }

    async function loadCategories() {
        try {
            const { data: categories } = await supabase
                .from("admin_product_categories")
                .select("*")
                .order("name");

            const select = document.getElementById(
                "category-filter",
            ) as HTMLSelectElement;
            if (select && categories) {
                categories.forEach((cat) => {
                    const option = document.createElement("option");
                    option.value = cat.id;
                    option.textContent = cat.name;
                    select.appendChild(option);
                });
            }
        } catch (error) {
            console.error("Error loading categories:", error);
        }
    }

    async function loadProducts() {
        const tbody = document.getElementById("products-table-body");
        const searchInput = document.getElementById(
            "search-input",
        ) as HTMLInputElement;
        const categoryFilter = document.getElementById(
            "category-filter",
        ) as HTMLSelectElement;
        const stockFilter = document.getElementById(
            "stock-filter",
        ) as HTMLSelectElement;

        if (!tbody) return;

        tbody.innerHTML =
            '<tr><td colspan="7" class="px-6 py-8 text-center">Loading...</td></tr>';

        try {
            let query = supabase.from("admin_products").select(`
          *,
          admin_product_categories (name)
        `);

            if (searchInput?.value) {
                query = query.or(
                    `name.ilike.%${searchInput.value}%,sku.ilike.%${searchInput.value}%`,
                );
            }

            if (categoryFilter?.value) {
                query = query.eq("category_id", categoryFilter.value);
            }

            if (stockFilter?.value === "low") {
                query = query.lt("stock_quantity", 10);
            } else if (stockFilter?.value === "out") {
                query = query.eq("stock_quantity", 0);
            } else if (stockFilter?.value === "in") {
                query = query.gt("stock_quantity", 0);
            }

            const { data, error } = await query.order("name");

            if (error) throw error;

            if (!data || data.length === 0) {
                tbody.innerHTML =
                    '<tr><td colspan="7" class="px-6 py-8 text-center">No products found</td></tr>';
                return;
            }

            tbody.innerHTML = data
                .map((product) => {
                    const stockStatus =
                        product.stock_quantity === 0
                            ? "out"
                            : product.stock_quantity < product.reorder_level
                              ? "low"
                              : "good";
                    const statusColors = {
                        out: "bg-red-100 text-red-800",
                        low: "bg-yellow-100 text-yellow-800",
                        good: "bg-green-100 text-green-800",
                    };

                    return `
          <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
              <div class="font-medium text-gray-900">${product.name}</div>
              <div class="text-xs text-gray-500">${product.description || "-"}</div>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900">${product.sku || "-"}</td>
            <td class="px-6 py-4 text-sm text-gray-900">${product.admin_product_categories?.name || "-"}</td>
            <td class="px-6 py-4 text-sm font-medium text-gray-900">
              ${new Intl.NumberFormat("fr-FR", { style: "currency", currency: "XOF" }).format(product.unit_price)}
            </td>
            <td class="px-6 py-4">
              <div class="text-sm font-medium text-gray-900">${product.stock_quantity} ${product.unit_of_measure}</div>
              <div class="text-xs text-gray-500">Min: ${product.reorder_level}</div>
            </td>
            <td class="px-6 py-4">
              <span class="px-2 py-1 text-xs font-semibold rounded-full ${statusColors[stockStatus]}">
                ${stockStatus === "out" ? "Out of Stock" : stockStatus === "low" ? "Low Stock" : "In Stock"}
              </span>
            </td>
            <td class="px-6 py-4">
              <div class="flex gap-2">
                <button class="text-blue-600 hover:text-blue-900 edit-btn" data-id="${product.id}">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="text-red-600 hover:text-red-900 delete-btn" data-id="${product.id}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </td>
          </tr>
        `;
                })
                .join("");
        } catch (error) {
            console.error("Error loading products:", error);
            tbody.innerHTML =
                '<tr><td colspan="7" class="px-6 py-8 text-center text-red-500">Error loading data</td></tr>';
        }
    }

    // Event Listeners
    document
        .getElementById("search-input")
        ?.addEventListener("input", loadProducts);
    document
        .getElementById("category-filter")
        ?.addEventListener("change", loadProducts);
    document
        .getElementById("stock-filter")
        ?.addEventListener("change", loadProducts);

    // Initial load
    loadStats();
    loadCategories();
    loadProducts();
</script>
