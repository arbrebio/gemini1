  "description": "Professional low trajectory impact sprinkler for uniform under-canopy irrigation, ideal for banana and oil palm plantations.",
  "brand": {
    "@type": "Brand",
    "name": "Netafim"
  },
  "manufacturer": {
    "@type": "Organization",
    "name": "Netafim",
    "url": "https://arbrebio.com"
  },
  "offers": {
    "@type": "Offer",
    "priceCurrency": "XOF",
    "availability": "https://schema.org/InStock"
  },
  "image": [
    "https://imgur.com/KRKFqz1.jpg"
  ]
}
</script>