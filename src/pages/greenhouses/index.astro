];

const features = [
  {
    title: 'Climate-Adaptive Design',
    description: 'Engineered specifically for African climate conditions, our greenhouses maintain optimal growing conditions year-round.',
    stats: ['40% cooler interior', '60% humidity control', '92% light transmission'],
    image: 'https://imgur.com/XtX9fmQ.jpg'
  },
  {
    title: 'Structural Durability',
    description: 'Built with hot-dip galvanized steel and our patented bolt-lock system for unmatched strength and longevity.',
    stats: ['20+ years lifespan', '150 km/h wind resistance', '25 kg/m¬≤ load capacity'],
    image: 'https://imgur.com/hKnWqYO.jpg'
  },
  {
    title: 'Advanced Coverage System',
    description: 'Multi-layer UV-stabilized polyethylene with IR heat retention technology for optimal crop protection.',
    stats: ['5-year UV warranty', '92% light transmission', '25% better heat retention'],
    image: 'https://imgur.com/ybRfmvG.jpg'
  },
  {
    title: 'Smart Ventilation',
    description: 'Automated ventilation system with precision climate control for perfect growing conditions.',
    stats: ['60 air changes/hour', '50-mesh insect protection', 'Smart climate control'],
    image: 'https://imgur.com/u9CfHxE.jpg'
  }
];

const comparisons = [
  {
    title: 'Connection System',
    standard: {
      title: 'Standard Welded Joints',
      points: [
        'Limited strength under stress',
        'Prone to failure at weld points',
        'Cannot be easily repaired',
        'Shorter lifespan'
      ]
    },
    premium: {
      title: 'Arbre Bio Bolt-Lock System',
      points: [
        '300% stronger connection points',
        'Distributed stress load',
        'Easy maintenance and repairs',
        '20+ years lifespan'
      ]
    }
  },
  {
    title: 'Coverage Technology',
    standard: {
      title: 'Basic UV Film',
      points: [
        'Basic UV protection',
        'Limited light diffusion',
        '2-3 year lifespan',
        'Poor heat retention'
      ]
    },
    premium: {
      title: 'Multi-Layer Smart Film',
      points: [
        'Complete UV-A/B/C blocking',
        'Optimal light diffusion',
        '5-year warranty',
        'Advanced IR heat retention'
      ]
    }
  }
];
---

<Layout
  title="Premium Agricultural Greenhouses | Built for Africa's Climate"
  description="Discover Arbre Bio Africa's premium greenhouse technology, engineered specifically for African climate conditions. Features include climate-adaptive design, superior durability, and smart ventilation systems."
>
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://imgur.com/z1onyVl.jpg"
        alt="Arbre Bio Premium Greenhouse" 
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          Premium Agricultural Greenhouses
          <span class="block text-2xl md:text-3xl mt-2">Built for Africa's Climate</span>
        </h1>
        <p class="text-xl text-white mb-8 font-medium">
          20+ Years Lifespan ‚Ä¢ Maximum Crop Protection ‚Ä¢ Industry-Leading Technology
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href="#quote-form"
            class="bg-primary hover:bg-primary-600 text-white px-8 py-3 rounded-full text-lg transition-colors duration-300"
          >
            Request Custom Quote
          </a>
          <a 
            href="#specifications"
            class="bg-white/10 hover:bg-white/20 text-white border-2 border-white px-8 py-3 rounded-full text-lg transition-colors duration-300 backdrop-blur-sm"
          >
            View Specifications
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  {features.map((feature, index) => (
    <section class={`py-20 ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}`}>
      <div class="container mx-auto px-4">
        <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${index % 2 === 0 ? '' : 'lg:flex-row-reverse'}`}>
          <div class={`order-2 ${index % 2 === 0 ? 'lg:order-2' : 'lg:order-1'}`}>
            <img 
              src={feature.image}
              alt={feature.title}
              class="w-full h-[400px] object-cover rounded-lg shadow-lg"
              loading="lazy"
            />
          </div>
          <div class={`order-1 ${index % 2 === 0 ? 'lg:order-1' : 'lg:order-2'}`}>
            <h2 class="text-3xl font-bold mb-6">{feature.title}</h2>
            <p class="text-lg text-gray-600 mb-8">{feature.description}</p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              {feature.stats.map((stat) => (
                <div class="bg-white p-4 rounded-lg shadow-md text-center">
                  <p class="text-primary font-bold">{stat}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- Specifications Table -->
  <section id="specifications" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Technical Specifications</h2>
      <div class="space-y-8">
        {specifications.map((category) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="bg-primary text-white p-4">
              <h3 class="text-xl font-bold">{category.category}</h3>
            </div>
            <div class="p-4">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {category.items.map((item) => (
                  <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="font-bold mb-2">{item.feature}</h4>
                    <p class="text-gray-600 mb-2">{item.value}</p>
                    <p class="text-primary text-sm">{item.advantage}</p>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Why Choose Our Technology</h2>
      <div class="space-y-12">
        {comparisons.map((comparison) => (
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-gray-50 p-8 rounded-lg">
              <h3 class="text-xl font-bold mb-4">{comparison.standard.title}</h3>
              <ul class="space-y-3">
                {comparison.standard.points.map((point) => (
                  <li class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                    {point}
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-primary/10 p-8 rounded-lg">
              <h3 class="text-xl font-bold mb-4">{comparison.premium.title}</h3>
              <ul class="space-y-3">
                {comparison.premium.points.map((point) => (
                  <li class="flex items-center text-gray-700">
                    <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    {point}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quote Form Section -->
  <section id="quote-form" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Request a Custom Quote</h2>
        <form class="bg-white p-8 rounded-lg shadow-lg space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                First Name *
              </label>
              <input
                type="text"
                required
                class="w-full px-4 py-2 rounded-md border-gray-300 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Last Name *
              </label>
              <input
                type="text"
                required
                class="w-full px-4 py-2 rounded-md border-gray-300 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Email Address *
            </label>
            <input
              type="email"
              required
              class="w-full px-4 py-2 rounded-md border-gray-300 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Phone Number *
            </label>
            <input
              type="tel"
              required
              class="w-full px-4 py-2 rounded-md border-gray-300 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Project Location *
            </label>
            <input
              type="text"
              required
              class="w-full px-4 py-2 rounded-md border-gray-300 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
              placeholder="City, Country"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Greenhouse Size (Square Meters) *
            </label>
            <input
              type="number"
              required
              class="w-full px-4 py-2 rounded-md border-gray-300 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Project Timeline
            </label>
            <select
              class="w-full px-4 py-2 rounded-md border-gray-300 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
            >
              <option value="immediate">Immediate (1-3 months)</option>
              <option value="soon">Soon (3-6 months)</option>
              <option value="planning">Planning Phase (6+ months)</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Additional Requirements
            </label>
            <textarea
              rows="4"
              class="w-full px-4 py-2 rounded-md border-gray-300 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
              placeholder="Tell us about your specific needs, crops you plan to grow, or any special requirements..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-primary text-white px-8 py-3 rounded-md hover:bg-primary-600 transition-colors duration-300"
          >
            Submit Quote Request
          </button>
        </form>

        <!-- Trust Indicators -->
        <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-4xl mb-4">üèÜ</div>
            <h3 class="font-bold mb-2">ISO 9001:2015 Certified</h3>
            <p class="text-gray-600">Quality Management System</p>
          </div>
          <div>
            <div class="text-4xl mb-4">‚≠ê</div>
            <h3 class="font-bold mb-2">5-Year Warranty</h3>
            <p class="text-gray-600">Industry-Leading Coverage</p>
          </div>
          <div>
            <div class="text-4xl mb-4">üåç</div>
            <h3 class="font-bold mb-2">500+ Projects</h3>
            <p class="text-gray-600">Across Africa</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Transform Your Farm?</h2>
      <p class="text-xl text-white mb-8">Contact us today for expert advice and custom solutions.</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="#quote-form" 
          class="bg-white text-primary px-8 py-3 rounded-full text-lg hover:bg-opacity-90"
        >
          Get Started
        </a>
        <a 
          href="https://wa.me/2250799295643" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="bg-[#25D366] text-white px-8 py-3 rounded-full text-lg hover:bg-opacity-90 inline-flex items-center"
        >
          <i class="fab fa-whatsapp mr-2"></i>
          Chat on WhatsApp
        </a>
      </div>
    </div>
  </section>
</Layout>

