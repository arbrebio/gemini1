---
import Layout from '../../layouts/Layout.astro';

const specifications = [
  {
    category: 'Structure',
    items: [
      { feature: 'Frame Material', value: 'Hot-dip galvanized steel', advantage: 'Superior corrosion resistance, 20+ years lifespan' },
      { feature: 'Connection System', value: 'Patented bolt-lock technology', advantage: '300% stronger than traditional welded joints' },
      { feature: 'Wind Resistance', value: 'Up to 150 km/h', advantage: 'Exceeds industry standards by 50%' },
