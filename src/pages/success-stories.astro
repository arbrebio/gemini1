---

<Layout
  title="Success Stories - Real Results from African Farms"
  description="Discover how Arbre Bio Africa has helped farmers across Africa increase yields and improve efficiency through modern agricultural solutions."
>
  <!-- Hero Section -->
  <section class="relative h-[50vh] flex items-center">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1625246333195-78d9c38ad449?ixlib=rb-4.0.3"
        alt="Successful African Farm" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">Success Stories</h1>
      <p class="text-xl text-white max-w-2xl">Real results from farms across Africa</p>
    </div>
  </section>

  <!-- Case Studies -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      {caseStudies.map((study, index) => (
        <div class={`mb-20 ${index !== 0 ? 'border-t pt-20' : ''}`}>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            <div>
              <h2 class="text-3xl font-bold mb-4">{study.title}</h2>
              <div class="flex items-center mb-6">
                <img 
                  src={study.clientImage} 
                  alt={study.client}
                  class="w-16 h-16 rounded-full object-cover mr-4"
                />
                <div>
                  <h3 class="font-bold">{study.client}</h3>
                  <p class="text-gray-600">{study.location}</p>
                </div>
              </div>
              <p class="text-gray-700 mb-6">{study.description}</p>
              <div class="bg-gray-50 p-6 rounded-lg mb-6">
                <h3 class="font-bold mb-2">Challenge:</h3>
                <p class="text-gray-700">{study.challenge}</p>
              </div>
              <div class="bg-primary/10 p-6 rounded-lg">
                <h3 class="font-bold mb-2">Solution:</h3>
                <p class="text-gray-700">{study.solution}</p>
              </div>
            </div>
            <div>
              <div class="grid grid-cols-1 gap-4">
                <div>
                  <p class="font-semibold mb-2">Before Implementation:</p>
                  <img 
                    src={study.beforeImage} 
                    alt="Before implementation"
                    class="w-full h-48 object-cover rounded-lg"
                  />
                </div>
                <div>
                  <p class="font-semibold mb-2">After Implementation:</p>
                  <img 
                    src={study.afterImage} 
                    alt="After implementation"
                    class="w-full h-48 object-cover rounded-lg"
                  />
                </div>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div class="bg-gray-50 p-6 rounded-lg">
              <h3 class="font-bold mb-4">Results Achieved:</h3>
              <ul class="space-y-2">
                {study.results.map((result) => (
                  <li class="flex items-center text-gray-700">
                    <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    {result}
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-primary/10 p-6 rounded-lg">
              <h3 class="font-bold mb-4">Client Testimonial:</h3>
              <blockquote class="text-gray-700 italic">"{study.testimonial}"</blockquote>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Testimonials Slider -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">What Our Clients Say</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="flex items-center mb-4">
              <img 
                src={testimonial.image} 
                alt={testimonial.name}
                class="w-16 h-16 rounded-full object-cover mr-4"
              />
              <div>
                <h3 class="font-bold">{testimonial.name}</h3>
                <p class="text-gray-600">{testimonial.role}</p>
                <p class="text-gray-500 text-sm">{testimonial.location}</p>
              </div>
            </div>
            <blockquote class="text-gray-700 italic">"{testimonial.text}"</blockquote>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-6">Ready to Transform Your Farm?</h2>
      <p class="text-xl text-white mb-8">Join our growing list of successful farmers across Africa.</p>
      <a 
        href="/contact" 
        class="bg-white text-primary px-8 py-3 rounded-full text-lg hover:bg-opacity-90 inline-flex items-center"
      >
        Get Started Today
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </section>
</Layout>