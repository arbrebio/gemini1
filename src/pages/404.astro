---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations, defaultLang } from '../lib/i18n';

const lang = getLangFromUrl(Astro.url) || defaultLang;
const t = useTranslations(lang);
---

<Layout
  title={t('errors.pageNotFound')}
  description="The page you're looking for doesn't exist. Return to our homepage or contact us for assistance."
  noIndex={true}
>
  <div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4">
    <div class="max-w-md w-full text-center">
      <div class="mb-8">
        <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">{t('errors.pageNotFound')}</h2>
        <p class="text-gray-600 mb-8">
          The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>
      </div>
      
      <div class="space-y-4">
        <a 
          href={lang === defaultLang ? '/' : `/${lang}`}
          class="inline-block bg-primary text-white px-6 py-3 rounded-full hover:bg-primary-600 transition-colors"
        >
          {t('errors.goHome')}
        </a>
        
        <div class="text-sm text-gray-500">
          <p>Need help? <a href={`/${lang === defaultLang ? '' : lang + '/'}contact`} class="text-primary hover:underline">Contact us</a></p>
        </div>
      </div>
    </div>
  </div>
</Layout>