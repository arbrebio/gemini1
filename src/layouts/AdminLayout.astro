---
import Sidebar from "../components/admin/Sidebar.astro";
import Header from "../components/admin/Header.astro";
import "../styles/base.css"; // Ensure global styles are loaded

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Arbre Bio Africa Admin Panel" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <title>{title} | Arbre Bio Admin</title>
    </head>
    <body class="bg-gray-50 font-sans text-gray-900">
        <div class="flex min-h-screen">
            <!-- Sidebar -->
            <div class="hidden lg:block">
                <Sidebar />
            </div>

            <!-- Main Content -->
            <div class="flex-1 flex flex-col min-w-0 overflow-hidden">
                <Header />

                <main class="flex-1 overflow-y-auto p-6">
                    <slot />
                </main>
            </div>
        </div>

        <!-- Auth Check Script -->
        <script>
            import { supabase } from "../lib/supabase";

            // Simple client-side auth check
            // For better security, use middleware or SSR checks
            const checkAuth = async () => {
                const {
                    data: { session },
                } = await supabase.auth.getSession();
                if (!session) {
                    window.location.href = "/admin/login";
                }
            };

            checkAuth();
        </script>
    </body>
</html>
